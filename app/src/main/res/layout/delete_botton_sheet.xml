<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/bottom_sheet">
<View
    android:layout_margin="10dp"
    android:layout_width="100dp"
    android:layout_height="7dp"
    android:background="#A8A4A4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure want to delete this Note?"
        android:gravity="center"
        android:fontFamily="@font/sans_bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"/>
    <TextView
        android:background="@drawable/bg_delete_no"
        android:id="@+id/delete_no"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/sans_bold"
        android:textColor="@color/purple_700"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:text="No"
        android:padding="7dp"
        android:layout_height="wrap_content"/>
 <TextView
     android:id="@+id/delete_yes"
     android:layout_width="match_parent"
     android:gravity="center"
     android:textSize="20dp"
     android:fontFamily="@font/sans_bold"
     android:textColor="@color/white"
     android:layout_marginHorizontal="20dp"
     android:layout_marginVertical="10dp"
     android:layout_height="wrap_content"
     android:padding="7dp"
     android:background="@drawable/bg_delete_yes"
     android:text="Yes"/>

</LinearLayout>